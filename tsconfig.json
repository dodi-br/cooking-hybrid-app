{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "types": [
      "jasmine"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "node_modules/@types/node/index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
